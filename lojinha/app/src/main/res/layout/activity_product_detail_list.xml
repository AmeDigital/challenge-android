<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".view.activity.ProductDetailListActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:titleTextColor="@color/colorWhite"
            android:background="@color/colorWarmPurple"
            android:elevation="16dp"
            android:theme="@style/ToolbarThemeDetail"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rclItensDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/toolbar"
            tools:listitem="@layout/best_sellers_item_layout"/>

    <TextView
            android:id="@+id/titleEmpty"
            android:fontFamily="@font/pacifico_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:textSize="64sp"
            android:text="Lista vazia"
            android:textColor="@color/colorGreyishBrow"/>



</RelativeLayout>