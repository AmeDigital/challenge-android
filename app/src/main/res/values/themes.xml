<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewBase" parent="TextAppearance.AppCompat.Large" />

    <style name="TextViewMenuLogo" parent="TextViewBase">
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextViewAboutLogo" parent="TextViewBase">
        <item name="android:textSize">@dimen/logo_text_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="TextViewDeveloperName" parent="TextViewBase">
        <item name="android:textSize">@dimen/developer_name_text_size</item>
    </style>

    <style name="TextViewDateDevelopment" parent="TextViewBase">
        <item name="android:textSize">@dimen/development_date_text_size</item>
    </style>

    <style name="TextViewProductDescription" parent="TextViewBase">
        <item name="android:textSize">@dimen/product_description_text_size</item>
    </style>

    <style name="TextViewCategoryName" parent="TextViewBase">
        <item name="android:textSize">@dimen/category_name_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewPriceFrom" parent="TextViewBase">
        <item name="android:textSize">@dimen/price_from_text_size</item>
        <item name="android:textColor">@color/colorGreyish</item>
    </style>

    <style name="TextViewPriceTo" parent="TextViewBase">
        <item name="android:textSize">@dimen/price_to_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorTomato</item>
    </style>

    <style name="TextViewProductDescriptionDetail" parent="TextViewBase">
        <item name="android:textSize">@dimen/product_description_detail_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>