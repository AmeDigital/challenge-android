<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/warmPurple</item>
        <item name="colorPrimaryDark">@color/warmPurpleDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="menuIcon">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/menu_item_font</item>
    </style>
    <style name="CustomToolbar">
        <item name="fontFamily">@font/pacifico</item>
        <item name="android:textSize">@dimen/menu_title_size</item>
        <item name="android:textColor">@color/whiteTwo</item>
    </style>
    <style name="CategoryToolbar">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/menu_title_size</item>
        <item name="android:textColor">@color/whiteTwo</item>
    </style>
    <style name="SectionTitle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/section_title_size</item>
        <item name="android:textColor">@color/greyishBrown</item>
    </style>
</resources>
