<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/header_list_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:itemCount="1"
            tools:layoutManager="GridLayoutManager"
            tools:spanCount="1"
            tools:listitem="@layout/header_item_layout"/>

        <TextView
            android:id="@+id/home_category_header"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/category_header_title"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_list_recyclerview" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_category_header"
            app:layout_constraintBottom_toTopOf="@id/home_category_recyclerview"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_category_recyclerview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="128dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_category_header"
            tools:itemCount="2"
            tools:layoutManager="GridLayoutManager"
            tools:spanCount="2"
            tools:listitem="@layout/category_item_layout"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_category_recyclerview"
            app:layout_constraintBottom_toTopOf="@id/top_sellers_textview"/>

        <TextView
            android:id="@+id/top_sellers_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/top_sellers_title"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_category_recyclerview"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#999"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/top_sellers_list_recyclerview"
            app:layout_constraintTop_toBottomOf="@id/top_sellers_textview"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/top_sellers_list_recyclerview"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_sellers_textview"
            tools:itemCount="16"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>