<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="product" type="com.lodjinha.model.Product"/>
    </data>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                tools:text="9999,9"
                android:text="@{product.formatOriginalPrice()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/originalPriceProduct"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                android:textSize="12sp"
                android:textColor="@color/greyish"
                app:fontFamily="@font/roboto_medium"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:layout_alignParentStart="true" android:layout_alignParentLeft="true"/>

        <TextView
                tools:text="9999,9"
                android:text="@{product.formatCurrentPrice()}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentPriceProduct"
                android:layout_centerVertical="true"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="20sp"
                android:textColor="@color/tomato"
                app:fontFamily="@font/roboto_bold"
                android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
                tools:ignore="RelativeOverlap"/>

    </RelativeLayout>

</layout>
