<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="category" type="com.lodjinha.model.Category"/>
    </data>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true" android:focusable="true"
            android:gravity="center" tools:ignore="UseCompoundDrawables">

        <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/imgCategory" tools:ignore="ContentDescription"
                app:imageUrlWithPlaceholder="@{category.urlImage}"/>

        <TextView
                tools:text="descriptionCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="13sp"
                android:gravity="center"
                android:textColor="@color/greyishBrown"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{category.description}"
                app:fontFamily="@font/roboto"/>

    </LinearLayout>

</layout>
