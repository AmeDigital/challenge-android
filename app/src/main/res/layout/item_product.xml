<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable name="product" type="com.lodjinha.model.Product"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imgProduct" tools:ignore="ContentDescription"
                android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                android:layout_marginTop="16dp" android:layout_marginBottom="16dp"
                app:imageUrl="@{product.urlImage}"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                tools:text="Name Product"
                android:layout_width="0dp"
                android:id="@+id/nameProduct"
                android:layout_height="60dp"
                app:layout_constraintStart_toEndOf="@+id/imgProduct" android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/arrowImg" android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="@{product.name}"/>

        <TextView
                tools:text="9999,9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/originalPriceProduct" app:layout_constraintStart_toEndOf="@+id/imgProduct"
                android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/currentPriceProduct" android:layout_marginRight="8dp"
                />

        <TextView
                tools:text="9999,9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentPriceProduct"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="16dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/nameProduct" app:layout_constraintVertical_bias="1.0"
                android:layout_marginEnd="16dp" app:layout_constraintEnd_toStartOf="@+id/arrowImg"
                android:layout_marginRight="16dp"
                />

        <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp" app:srcCompat="@android:drawable/sym_def_app_icon"
                android:id="@+id/arrowImg" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
