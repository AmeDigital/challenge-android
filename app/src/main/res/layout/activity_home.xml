<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.HomeActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/header_list_recyclerview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:itemCount="4"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:layout_height="200dp"
        tools:listitem="@layout/header_item_layout"/>

    <TextView
        android:id="@+id/category_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/category_header_title"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_list_recyclerview" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_header"
        app:layout_constraintBottom_toTopOf="@id/category_list_recyclerview"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/category_list_recyclerview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="128dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_header"
        tools:itemCount="1"
        tools:listitem="@layout/category_item_layout"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#999"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/category_list_recyclerview"/>

</androidx.constraintlayout.widget.ConstraintLayout>